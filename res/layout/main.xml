<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFFFF">
    <LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/linearLayout2" android:background="#FFFFFFFF" android:layout_gravity="center_horizontal">
        <Button android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="wrap_content" android:id="@+id/btBack" android:text="前"></Button>
        <TextView android:layout_width="wrap_content" android:id="@+id/tvPage" android:layout_weight="1" android:gravity="center" android:background="#00FFFFFF" android:textColor="#FF000000" android:layout_gravity="center_horizontal|center" android:layout_height="wrap_content" android:text="(1/1)"></TextView>
        <Button android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="wrap_content" android:id="@+id/btForward" android:text="次"></Button>
    </LinearLayout>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/tvDayKind" android:textColor="#ff000000"></TextView>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/tvFrom" android:textColor="#ff000000"></TextView>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/tvTo" android:textColor="#ff000000"></TextView>
<ScrollView android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/scrollView1">
    <LinearLayout android:id="@+id/linearLayout1" android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical">
        <TableLayout android:id="@+id/tlTimeTable" android:layout_width="fill_parent" android:layout_height="wrap_content"></TableLayout>
        <TextView android:id="@+id/Test" android:layout_width="fill_parent" android:layout_height="wrap_content" android:textColor="#ff000000"></TextView>
    </LinearLayout>
</ScrollView>
</LinearLayout>
